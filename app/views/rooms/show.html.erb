<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <%= link_to image_tag(@room.display_image(600,300), alt: "ルーム画像"), room_path(@room)%>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <% if @room.user.image.attached? %>
            <%= image_tag(@room.user.display_image(50,50), class:"img-circle", alt: "ユーザー画像") %>
          <% else %>
            <%= image_tag("profile.jpg", size: '40x40', class:"img-circle", alt: "ユーザー画像") %>
          <% end %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.room_name %></p>
          <p class="room-show-profile-address"><%= @room.room_address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.room_introduction %></p>
    </div>
    
    <div class="col-md-4">
      <div class="room-show-nav">
        <h3 class="price-icon">¥<%= @room.room_fee.to_s(:delimited) %> / 日</h3>
        <div class="room-show-date-select">
          <%= form_with(url: new_reservation_path, method: :get, local: true) do |f| %>
            <%= render "shared/error_messages", object: @reservation %>
            <%= hidden_field_tag :room, @room %>
            
            <%= f.label "開始日" %></th>
            <%= f.date_field :start_day, class: "form-control mb-4" %>
            
            <%= f.label "終了日" %>
            <%= f.date_field :end_day, class: "form-control mb-4" %>
            
            <%= f.label "宿泊人数" %>
            <%= f.number_field :total_people, class: "form-control mb-4" %>
            
            <% if user_signed_in? %>
              <div class="submit">
                <%= f.submit "予約する", class:"btn btn-primary form-control form-mb-4" %>
              </div>
            <% else %>
              <div class="submit">
                <ul>
                  <li class="list-unstyled"><%= link_to "ログイン", new_user_session_path, class:"btn btn-primary" %></li>
                </ul>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

