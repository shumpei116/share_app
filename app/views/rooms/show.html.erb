<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <% if @room.image.attached? %>
        <%= link_to image_tag(@room.display_image(600,300)), room_path(@room)%>
      <% else %>
        <p>     </p>
      <% end %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <a href="/"><img class="host-icon" src="/assets/default_icon.jpg"></a>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.room_name %></p>
          <p class="room-show-profile-address"><%= @room.room_address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.room_introduction %></p>
    </div>
    
    <h5 class="price-icon"><%= @room.room_fee.to_s(:delimited) %> / 日</h5>
    <%= form_with(url: new_reservation_path, method: :get, local: true) do |f| %>
      <%= render "shared/error_messages", object: @reservation %>
      <%= hidden_field_tag :room, @room %>
      <table>
        <tbody>
          <tr>
              <th><%= f.label "開始日" %></th>
              <td><%= f.date_field :start_day, class: "form-control" %></td>
          </tr>
          <tr>
              <th><%= f.label "終了日" %></th>
              <td><%= f.date_field :end_day, class: "form-control" %></td>
          </tr>
          <tr>
              <th><%= f.label "宿泊人数" %></th>
              <td><%= f.number_field :total_people, class: "form-control" %></td>
          </tr>
        </tbody>
      </table>

      <div class="submit">
        <ul>
          <li class="submit-li"><%= f.submit "予約する" %></li>
        </ul>
      </div>
    <% end %>


