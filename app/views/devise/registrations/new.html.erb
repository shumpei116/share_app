<div class="container device">
  <div class="device_frame">
    <h4>新しいアカウントを作成</h4>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: 'form-horizontal'}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-row form-group">
          <div class="col-xs-3 control-label required-a"></div>
          <div class="col-xs-8">
            <%= f.text_field :name, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "ユーザー名" %>
          </div>
        </div>
        <div class="field form-row form-group">
          <div class="col-xs-3 control-label required-a"></div>
          <div class="col-xs-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "メールアドレス" %>
          </div>
        </div>
        <div class="field form-row form-group">
          <div class="col-xs-3 control-label required-a"></div>
          <div class="col-xs-8">
            <%= f.password_field :password, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "パスワード" %>
          </div>
        </div>
        <div class="field form-row form-group">
          <div class="col-xs-3 control-label required-a"></div>
          <div class="col-xs-8">
            <%= f.password_field :password_confirmation, autocomplete: "current-password", class:"form-control col-10", placeholder: "パスワード確認用" %>
          </div>
        </div>
        <div class="actions form-group">
          <div class="col-xs-offset-2 col-xs-8">
            <%= f.submit "新しいアカウントを作成", class:"form-control btn-primary" %>
          </div>
        </div>
      <% end %>
      <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path %>
    </div>
  </div>
</div>

